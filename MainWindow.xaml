<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Navigation Window" Height="350" Width="525"
        Background="#2B2B2B" Foreground="#FFFFFF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#1E1E1E">
            <Button x:Name="btnWindow1" Content="Window 1" Margin="10" Click="btnWindow1_Click"/>
            <Button x:Name="btnWindow2" Content="Window 2" Margin="10" Click="btnWindow2_Click"/>
            <Button x:Name="btnWindow3" Content="Window 3" Margin="10" Click="btnWindow3_Click"/>
            <Button x:Name="btnWindow4" Content="Window 4" Margin="10" Click="btnWindow4_Click"/>
            <Button x:Name="btnWindow5" Content="Window 5" Margin="10" Click="btnWindow5_Click"/>
            <Button x:Name="btnWindow6" Content="Window 6" Margin="10" Click="btnWindow6_Click"/>
        </StackPanel>

        <!-- Content area -->
        <Grid Grid.Row="1">
            <Frame x:Name="frame" />
        </Grid>
    </Grid>
</Window>
